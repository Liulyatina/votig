<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="statService" class="by.it_academy.jd2.votig.service.StatService">
        <constructor-arg type="by.it_academy.jd2.votig.dao.api.IStatisticDao" ref="statisticsDao"/>
        <constructor-arg type="by.it_academy.jd2.votig.service.api.IVoteService" ref="voteService"/>
        <constructor-arg type="by.it_academy.jd2.votig.service.api.IConverter" ref="statConvereter"/>
    </bean>
    <bean id="statConvereter" class="by.it_academy.jd2.votig.service.converter.StatEntityToHibStatDTOConverter"/>
    <bean id="statisticsDao" class="by.it_academy.jd2.votig.dao.StatisticsDao"/>


    <bean id="artistService" class="by.it_academy.jd2.votig.service.ArtistService">
        <constructor-arg type="by.it_academy.jd2.votig.dao.api.IArtistDao" ref="artistDao"/>
        <constructor-arg type="by.it_academy.jd2.votig.service.api.IConverter" ref="artistConverter"/>
    </bean>
    <bean id="artistConverter" class="by.it_academy.jd2.votig.service.converter.ArtistEntityToDTOConverter"/>
    <bean id="artistDao" class="by.it_academy.jd2.votig.dao.ArtistDao"/>


    <bean id="genreService" class="by.it_academy.jd2.votig.service.GenreService">
        <constructor-arg type="by.it_academy.jd2.votig.dao.api.IGenreDao" ref="genreDao"/>
        <constructor-arg type="by.it_academy.jd2.votig.service.api.IConverter" ref="genreConverter"/>
    </bean>
    <bean id="genreConverter" class="by.it_academy.jd2.votig.service.converter.GenreEntityToDTOConverter"/>
    <bean id="genreDao" class="by.it_academy.jd2.votig.dao.GenreDao"/>

    <bean id="voteService" class="by.it_academy.jd2.votig.service.VoteService">
        <constructor-arg type="by.it_academy.jd2.votig.dao.api.IVoteDao" ref="voteDao"/>
        <constructor-arg type="by.it_academy.jd2.votig.service.api.IGenreService" ref="genreService"/>
        <constructor-arg type="by.it_academy.jd2.votig.service.api.IArtistService" ref="artistService"/>
    </bean>
    <bean id="voteDao" class="by.it_academy.jd2.votig.dao.VoteDao"/>

</beans>