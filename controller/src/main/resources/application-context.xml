<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DAO Beans -->
    <bean id="statisticsDao" class="by.it_academy.jd2.votig.dao.StatisticsDao" scope="singleton"/>
    <bean id="artistDao" class="by.it_academy.jd2.votig.dao.ArtistDao" scope="singleton"/>
    <bean id="voteDao" class="by.it_academy.jd2.votig.dao.VoteDao" scope="singleton"/>
    <bean id="genreDao" class="by.it_academy.jd2.votig.dao.GenreDao" scope="singleton"/>

    <!-- Service Beans -->
    <bean id="statService" class="by.it_academy.jd2.votig.service.StatService" scope="singleton">
        <constructor-arg ref="statisticsDao"/>
        <constructor-arg ref="voteService"/>
        <constructor-arg>
            <bean class="by.it_academy.jd2.votig.service.converter.StatEntityToHibStatDTOConverter"/>
        </constructor-arg>
    </bean>

    <bean id="voteService" class="by.it_academy.jd2.votig.service.VoteService" scope="singleton">
        <constructor-arg ref="voteDao"/>
        <constructor-arg ref="genreService"/>
        <constructor-arg ref="artistService"/>
    </bean>

    <bean id="artistService" class="by.it_academy.jd2.votig.service.ArtistService" scope="singleton">
        <constructor-arg ref="artistDao"/>
        <constructor-arg>
            <bean class="by.it_academy.jd2.votig.service.converter.ArtistEntityToDTOConverter"/>
        </constructor-arg>
    </bean>

    <bean id="genreService" class="by.it_academy.jd2.votig.service.GenreService" scope="singleton">
        <constructor-arg ref="genreDao"/>
        <constructor-arg>
            <bean class="by.it_academy.jd2.votig.service.converter.GenreEntityToDTOConverter"/>
        </constructor-arg>
    </bean>

</beans>